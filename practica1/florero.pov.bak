#include "colors.inc"          
#include "woods.inc"
#include "textures.inc"        
                
// La posicion de la camara
camera {
 location <3,0,0>
 look_at <3,5,0>
 //right 1
}
// Punto de luz
light_source {
 <0,10,10>
 color rgb <1,1,1> // White
}                    

plane { // Floor
    <0,1,0>, 0 //Normal and distance
    texture { 
        pigment {
            color Gray
            } 
    } 
}

background{
    color Black
} 
         
#declare macetero = box {<0,0,0>, <6,6,6>}
#declare agujero = cylinder {<3,3,-0.001>, <3,3,6.001>, 2}  
#declare Agujeroenvase = cylinder {<3,2,3>, <3,6.001,3>, 1.55}
#declare maceta =    
    difference
    {  
        object {macetero}
        object {agujero} 
        object {Agujeroenvase}  //make it a little bigger so stays open                
        texture {T_Wood2 finish {phong 0.7}}
    } 
      
#declare envaseConBorde =     
    difference
    {  
        cylinder {<3,2,3>, <3,5.75,3>, 1.5}
        cylinder {<3,2,3>, <3,5,7>, 1.2} 
        cylinder {<3,2,3>, <3,5.76,3>, 0.5}
        texture {T_Wood2 finish {reflection 0.15 phong 0.3}} 
    }
     
#declare florero =
    union
    { 
        object{maceta}
        object{envaseConBorde}       
    }          
    
#declare palo = 
    cylinder
    { 
        <0,0,0>, <0,12,0>, 0.15
        texture {pigment{ color ForestGreen}} 
    }     
                  
object{envaseConBorde}
